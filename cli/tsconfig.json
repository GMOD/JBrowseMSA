{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["esnext"],
    "sourceMap": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist/",
    "declaration": true
  },
  "include": ["src"]
}
